<% if user_signed_in? %>
  <% empathy_button_color = post.empathy_by?(current_user) ? Empathy::EMPATHY_COLOR : Empathy::UNEMPATHY_COLOR %>
  <% if post.empathy_by?(current_user) %>
    <input type='hidden' id='empathy_id' value="<%= post.empathy_by(current_user).id %>">
  <% end %>
  <input type='hidden' id='post_id' value="<%= post.id %>">
  <button id="js-empathy-button" class="<%= empathy_button_color %>">共感</button>
<% end %>

