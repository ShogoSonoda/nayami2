<div class="px-4">
  <% unless @users.nil? %>
    <% @users.each do |user| %>
      <div class="flex justify-between items-center border-b-2 py-2">
        <div class="flex items-center">
          <div class="mr-2">
            <%= link_to user_path(user.id) do %>
              <% if user.avatar.url %>
                <%= image_tag user.avatar.url, class: "w-10 h-10 rounded-full inline-flex items-center justify-center" %>
              <% else%>
                <%= image_tag 'default.png', class: "w-10 h-10 rounded-full inline-flex items-center justify-center" %>
              <% end %>
            <% end %>
          </div>
          <div>
            <%= link_to "#{user.nickname}", user_path(user.id) %>
          </div>
        </div>
        <div>
          <%= render partial: "follow_form", locals: { user: user } %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
