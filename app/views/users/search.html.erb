<div class="container mx-auto mt-10">
  <div class="block">
    <%= form_with url: search_users_path, method: :get, local: true, class: "w-full max-w-sm mx-auto text-center" do |f| %>
      <%= f.collection_select(
        :position_id, Position.all, :id, :name,
        {include_blank: "すべて"},
        {class: "rounded border border-gray-300 py-2 focus:outline-none focus:ring-2 focus:ring-green-200 focus:border-green-500 text-base pl-3 pr-10" }
        ) %>
      <%= f.submit "ユーザー検索", class: "ml-auto text-white bg-green-500 border-0 py-2 px-6 focus:outline-none hover:bg-green-600 rounded" %>
    <% end %>
  </div>
  <%= render 'users/index' %>
</div>
