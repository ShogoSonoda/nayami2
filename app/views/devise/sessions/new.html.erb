<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="p-4">
    <div class="mb-2">
      <p>メールアドレス</p>
      <%= f.email_field :email, class: "w-full border-2 px-2 py-1" %>
    </div>
    <div class="mb-2">
      <p>パスワード(半角英数字6文字以上)</p>
      <%= f.password_field :password, class: "w-full border-2 px-2 py-1" %>
    </div>
    <div class="mb-2">
      <p>パスワード再入力</p>
      <%= f.password_field :password_confirmation, class: "w-full border-2 px-2 py-1" %>
    </div>
    <div class="text-right">
      <%= f.submit "ログイン", class: "w-full border-2 bg-gray-200 p-2 cursor-pointer" %>
    </div>
  </div>
<% end %>
