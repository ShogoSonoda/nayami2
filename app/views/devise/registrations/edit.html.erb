<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="p-4">
    <div class="mb-2">
      <p>ニックネーム</p>
      <%= f.text_field :nickname, class: "w-full border-2 px-2 py-1" %>
    </div>
    <div class="mb-2">
      <p>メールアドレス</p>
      <%= f.email_field :email, class: "w-full border-2 px-2 py-1" %>
    </div>
    <div class="mb-2">
      <p>プロフィール文</p>
      <%= f.text_area :profile, class: "w-full h-48 border-2 px-2 py-1" %>
    </div>
    <div class="mb-2">
      <p>アバター画像</p>
      <%= f.file_field :avatar, class: "" %>
    </div>
    <div class="text-right">
      <%= f.submit "プロフィール更新", class: "border-2 bg-white p-2 cursor-pointer" %>
    </div>
  </div>
<% end %>
