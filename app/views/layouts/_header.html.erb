<header class="text-gray-600 body-font">
  <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
    <%= link_to "HOME", root_path, class: "ml-3 text-xl" %>
    <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
      <% if user_signed_in? %>
        <%= link_to "悩み検索", search_posts_path, class: "mr-5 hover:text-gray-900" %>
        <%= link_to "ユーザー検索", search_users_path, class: "mr-5 hover:text-gray-900" %>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "mr-5 hover:text-gray-900" %>
        <%= link_to "#{current_user.nickname}", user_path(current_user.id), class: "mr-5 hover:text-gray-900" %>
        <%= link_to "新規投稿", new_post_path, class: "mr-5 hover:text-gray-900" %>
        <%= link_to notifications_path do %>
          <% if unchecked_notifications.any? %>
            <i class="fas fa-bell"></i><i class="fas fa-exclamation ml-1"></i>
          <% else %>
            <i class="fas fa-bell"></i>
          <% end %>
        <% end %>
      <% else %>
        <%= link_to "新規登録", new_user_registration_path, class: "mr-5 hover:text-gray-900" %>
        <%= link_to "ログイン", new_user_session_path, class: "mr-5 hover:text-gray-900" %>
      <% end %>
    </nav>
  </div>
  <div class="container mx-auto flex justify-around mt-5">
    <div class="inline-block border rounded-full text-white bg-green-500 py-1 px-2 hover:bg-green-600">
      <%= link_to "新しい悩み", posts_path %>
    </div>
    <div class="inline-block border rounded-full text-white bg-green-500 py-1 px-2 hover:bg-green-600">
      <%= link_to "共感されている悩み", sort_empathy_posts_path %>
    </div>
    <div class="inline-block border rounded-full text-white bg-green-500 py-1 px-2 hover:bg-green-600">
      <%= link_to "タグで探す", tag_index_posts_path %>
    </div>
  </div>
</header>