<% comment = Comment.new %>

<div>
  <div class="flex items-center">
    <% if @post.user.avatar.url %>
      <%= image_tag @post.user.avatar.url, class: "w-8 h-8 rounded-full inline-flex items-center justify-center" %>
    <% else %>
      <%= image_tag 'default.png', class: "w-8 h-8 rounded-full inline-flex items-center justify-center" %>
    <% end %>
    <p class="ml-2 text-gray-700">
      コメントを投稿する
    </p>
  </div>
</div>
<%= form_with model: comment, url: { controller: 'comments', action: 'create' }, local: true do |f| %>
  <%= f.hidden_field :post_id, value: post.id %>
  <div class="mt-2">
    <%= f.text_area :text, class: "border-2 w-full h-24 p-2" %>
  </div>
  <div class="text-right">
    <%= f.submit "投稿", class: "bg-yellow-500 p-2 text-white cursor-pointer hover:bg-yellow-700" %>
  </div>
<% end %>
