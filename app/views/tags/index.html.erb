<div class="container mx-auto">
  <div class="flex max-w-5xl mx-auto">
    <div class="w-1/3">
      <%= render partial: "posts/side_var" %>
    </div>
    <div class="w-2/3">
      <div>
        <ul class="flex flex-wrap text-center">
          <% @tags.each do |tag| %>
            <li class="w-1/3 mb-2">
              <%= link_to tag.name, tag_posts_posts_path(tag_id: tag.id), class: "border-b-2" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
