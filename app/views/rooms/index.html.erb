<div class="container mx-auto">
  <div>
    <% if @currentEntries.exists? %>
      <% @anotherEntries.each do |e| %>
        <div class="flex justify-start border-b-2 mb-4">
          <div class="mr-2">
            <%= link_to user_path(e.user.id) do %>
              <% if e.user.avatar.url %>
                <%= image_tag e.user.avatar.url, class: "w-10 h-10 rounded-full inline-flex items-center justify-center" %>
              <% else %>
                <%= image_tag 'default.png', class: "w-10 h-10 rounded-full inline-flex items-center justify-center" %>
              <% end %>
            <% end %>
          </div>
          <div>
            <p><%= e.user.nickname %></p>
            <p>
              <%= link_to "#{Message.find_by(id: e.room.message_ids.last).text}", room_path(e.room.id) %>
            </p>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>DMはまだありません</p>
    <% end %>
  </div>
</div>
