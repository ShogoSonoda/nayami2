<%# 自分のマイページの場合 %>
<% if user_signed_in? && current_user == user %>
  <%= link_to "DM一覧", rooms_path, class: "border-b-2" %>
<% end %>

<%# 他人のマイページの場合 %>
<% if user_signed_in? && current_user != user %>
  <% if isRoom == true %>
    <%= link_to "DMを送る", room_path(roomId), class: "border-b-2" %>
  <% else %>
    <%= form_with model: room do |f| %>
      <%= fields_for entry do |e| %>
        <%= e.hidden_field :user_id, value: user.id %>
      <% end %>
        <%= f.submit "DMを送る", class: "bg-gray-100 cursor-pointer border-b-2" %>
    <% end %>
  <% end %>
<% end %>
