<div class="container mx-auto">
  <div class="flex max-w-5xl mx-auto">
    <div class="w-1/3">
      <p><%= link_to "悩み投稿検索", search_posts_path %></p>
      <p><%= link_to "新着順", posts_path %></p>
      <p><%= link_to "共感順", sort_empathy_posts_path %></p>
      <p><%= link_to "タグ一覧", tag_index_posts_path %></p>
    </div>
    <div class="w-2/3">
      <% @posts.each do |post| %>
        <div class="border-b-2 p-4 bg-white">
          <div>
            <%= link_to post_path(post.id) do %>
              <p class="text-lg"><%= post.text.truncate(50) %></p>
            <% end %>
          </div>
          <div class="mt-1">
            <%= render partial: "tags/tag_list", locals: { post: post } %>
          </div>
          <div class="flex justify-between mt-1">
            <div>
              <%= link_to user_path(post.user_id) do %>
                <div class="flex items-center">
                  <% if post.user.avatar.url %>
                    <%= image_tag post.user.avatar.url, class: "w-8 h-8 rounded-full inline-flex items-center justify-center" %>
                  <% else %>
                    <%= image_tag 'default.png', class: "w-8 h-8 rounded-full inline-flex items-center justify-center" %>
                  <% end %>
                  <p class="ml-2 text-gray-700">
                    <%= post.user.nickname %>
                    <span class="text-sm">が<%= post.created_at %>に投稿</span>
                  </p>
                </div>
              <% end %>
            </div>
            <div>
              <%= render partial: "empathies/empathy", locals: { post: post } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
