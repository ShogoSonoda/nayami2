<div class="container mx-auto">
  <%= form_with model: @post, url: sort_select_posts_path, method: :get, local: true, class: "w-full max-w-sm mx-auto" do |f| %>
    <%= f.select :keyword, [
      ['投稿が新しい順', 'new'],
      ['投稿が古い順', 'old'],
      ['共感が多い順', 'empathy'],
      ['共感が少ない順', 'noempathy']
    ], {}, { class: "rounded border border-gray-300 py-2 focus:outline-none focus:ring-2 focus:ring-green-200 focus:border-green-500 text-base pl-3 pr-10" } %>
    <%= f.submit "並べ替える", class: "ml-auto text-white bg-green-500 border-0 py-2 px-6 focus:outline-none hover:bg-green-600 rounded" %>
  <% end %>
</div>