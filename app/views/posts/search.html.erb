<%= form_with url: search_posts_path, method: :get, local: true do |f| %>
  <p>キーワードで探す</p>
    <%= f.text_field :text %>

  <p>タグで探す</p>
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>

    <%= f.submit "検索" %>
<% end %>

<% unless @posts.nil? %>
  <% @posts.each do |post| %>
    <p><%= post.text %></p>
  <% end %>
<% end %>
